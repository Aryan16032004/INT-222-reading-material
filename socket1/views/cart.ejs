<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shopping Cart</title>
</head>
<body>
  <h1>Shopping Cart</h1>
  <% if (cart && cart.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Subtotal</th>
          </tr>
      </thead>
      <tbody>
        <% cart.forEach(product => { %>
          <tr>
            <td><%= product.name %></td>
            <td>$<%= product.price %></td>
            <td>1</td> <td>$<%= product.price %></td>
            </tr>
        <% }) %>
        <tr>
          <th colspan="3">Total:</th>
          <th>$<%= total %></th>
        </tr>
      </tbody>
    </table>
    <a href="#">Checkout</a>
  <% } else { %>
    <p>Your cart is empty.</p>
  <% } %>
</body>
</html>
